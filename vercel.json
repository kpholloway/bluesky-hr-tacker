{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/check_home_runs",
      "schedule": "0 0,4,8,12,16,20 * * *"
    },
    {
      "path": "/api/post_summary",
      "schedule": "0 23 * * *"
    }
  ]
}
